{
  "include": ["app", "types"],
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./",
    "outDir":"./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
  },
  "exclude": [
    "node_modules",
    "**/*.spec.*"
]
}
