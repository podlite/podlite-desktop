{
  "name": "podlite",
  "productName": "podlite",
  "author": "Aliaksandr Zahatski",
  "license": "MIT",
  "version": "0.4.0",
  "description": "pod6 editor",
  "main": "build/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zag/podlite-desktop.git"
  },
  "homepage": "https://github.com/zag/podlite-desktop#readme",
  "bugs": {
    "url": "https://github.com/zag/podlite-desktop/issues"
  },
  "scripts": {
    "start": "run-s build watch",
    "clean": "rm -rf build release .cache",
    "release": "run-s build \"electron:build {@}\" --",
    "build": "run-s 'build:*'",
    "build:clean": "run-s clean",
    "build:electron": "mkdir -p build; cp app/renderer/client-api.js  dist-assets/icon.png  build && webpack",
    "watch": "run-p -r webpack:watch electron:start",
    "electron:start": "wait-on http-get://localhost:1124 && nodemon --watch build/main.js --exec \"electron .\"",
    "electron:build": "PYTHON_PATH=/usr/local/bin/python CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build -mwl --x64 --publish=never",
    "webpack:watch": "mkdir -p build ; cp app/renderer/client-api.js  dist-assets/icon.png  build  && webpack serve --config webpack.config.js  --port 1124",
    "test": "run-s parcel:build \"test:jest {@}\" --",
    "test:jest": "jest",
    "lint": "tslint app/**/*.ts{,x}"
  },
  "build": {
    "productName": "podlite",
    "appId": "org.podlite.podlite",
    "fileAssociations": [
      {
        "ext": "pod6",
        "name": "Pod6 Text",
        "role": "Editor"
      },
      {
        "ext": "rakudoc",
        "name": "Pod6 Text",
        "role": "Editor"
      }
    ],
    "files": [
      "app/**",
      "!app/main/main.ts",
      "!app/main/tests/**",
      "!app/renderer/**",
      "!app/**/*.map",
      "build/**",
      "!build/**/*.map",
      "vendors/**"
    ],
    "extraResources": [
      "app/renderer/client-api.js"
    ],
    "afterPack": "./assets/after-pack.js",
    "afterSign": "electron-builder-notarize",
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist"
    },
    "dmg": {
      "icon": "dist-assets/dmg-icon.icns",
      "title": "${productName} ${version}",
      "window": {
        "x": 200,
        "y": 160,
        "width": 550,
        "height": 400
      },
      "contents": [
        {
          "x": 160,
          "y": 250
        },
        {
          "x": 300,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mas": {
      "hardenedRuntime": false,
      "entitlements": "./build/entitlements.mas.plist",
      "gatekeeperAssess": false,
      "entitlementsInherit": "./build/entitlements.mas.inherit.plist",
      "provisioningProfile": "build/podlite_provision.provisionprofile"
    },
    "win": {
      "publisherName": "Aliaksandr Zahatski",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "Podlite-Setup-${version}.${ext}",
      "installerIcon": "dist-assets/win-installer.ico",
      "differentialPackage": false,
      "packElevateHelper": false
    },
    "appx": {
      "applicationId": "Podliteeditor",
      "displayName": "Podlite editor",
      "identityName": "47729AliaksandrZahatski.Podliteeditor",
      "publisher": "CN=5968156C-353D-4283-B776-80E86403C833",
      "showNameOnTiles": false,
      "backgroundColor": "#6b479c"
    },
    "linux": {
      "category": "Development",
      "icon": "dist-assets/linux-icon",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "appImage": {
      "artifactName": "Podlite-${version}.${ext}"
    },
    "directories": {
      "output": "release",
      "buildResources": "dist-assets"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.tsx",
      "!app/renderer/tests/**",
      "!app/renderer/.parcel/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.8.0",
    "@types/node": "^17.0.8",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.8.4",
    "@types/webpack": "latest",
    "@yarnpkg/pnpify": "^3.1.1-rc.10",
    "@yarnpkg/sdks": "^2.6.0-rc.2",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "electron": "13.6.3",
    "electron-builder": "^23.6.0",
    "electron-builder-notarize": "^1.2.0",
    "electron-devtools-installer": "^3.1.1",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "26.6.3",
    "jest-serializer-html": "^7.0.0",
    "mermaid": "^8.9.2",
    "mini-css-extract-plugin": "1.3.6",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "null-loader": "^4.0.1",
    "pnp-webpack-plugin": "^1.7.0",
    "prettier": "^2.2.1",
    "react-router-dom": "^5.0.1",
    "style-loader": "^3.3.1",
    "supports-color": "^9.2.1",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tslint": "^5.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.2",
    "wait-on": "^6.0.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2"
  },
  "dependencies": {
    "@podlite/editor-react": "^0.0.16",
    "@podlite/schema": "^0.0.10",
    "@podlite/to-jsx": "^0.0.14",
    "@types/react-router-dom": "^5.3.2",
    "about-window": "1.15.2",
    "codemirror": "5.x",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.4",
    "electron-util": "^0.14.2",
    "pod6": "^0.0.48",
    "podlite": "^0.0.21",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remove": "^0.1.5"
  },
  "packageManager": "yarn@3.1.1"
}
